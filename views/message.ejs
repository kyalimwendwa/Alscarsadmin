          <div class="card-container" id="messagess">
          
            <% messages.forEach((message, index) => { %>
                <div class="card">
                    <div class="card-body" style="display: block;">
                        <h2><%= message.firstname %><%= message.lastname %></h2>
                        <h2> <%= message.date %></h2>
                        <h2> <%= message.time %></h2>
                        <h2> <%= message.description %></h2>
                        <h2> <%= message.carname %></h2>
                        <h2> <%= message.year %></h2>
                        
                    </div>
                </div>
            <% }); %>
          </div>
          
