       <script>
        document.addEventListener('DOMContentLoaded', function () {
          const tableBody = document.getElementById('customerTableBody');
          const rightDiv = document.querySelector('.containerr');
      
          // Function to display message contents in the right div
          function displayMessageContents(carname, email, contact,year) {
            rightDiv.innerHTML = `
              <h2>Message Details</h2>
              <p ><strong>Year:</strong> ${year}</p>
              <p><strong>Car Name:</strong> ${carname}</p>
              <p><strong>Email:</strong> ${email}</p>
              <p><strong>Contact:</strong> ${contact}</p>
            `;
          }
      
          // Event listener for table row click
          tableBody.addEventListener('click', function (event) {
            const clickedRow = event.target.closest('tr');
            if (!clickedRow) return;
      
            const carname = clickedRow.dataset.carname;
            const email = clickedRow.dataset.email;
            const contact = clickedRow.dataset.contact;
            const year = clickedRow.dataset.year;
      
            // Display message contents in the right div
            displayMessageContents(carname, email, contact, year);
      
            // Mark row as clicked
            clickedRow.classList.remove('bold');
            clickedRow.dataset.clicked = true;
          });
        });
      </script>  
    
