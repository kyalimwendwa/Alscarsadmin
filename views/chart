
        <!DOCTYPE html>
        <html>
        <head>
            <title>Chart Example</title>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        </head>
        <body>
            <canvas id="myChart" width="400" height="400"></canvas>
            <script>
                var ctx = document.getElementById('myChart').getContext('2d');
                var myChart = new Chart(ctx, {"type":"pie","data":{"datasets":[{"data":[10,20,30,40],"backgroundColor":["red","blue","green","orange"]}]},"options":{"plugins":{"legend":{"display":false},"title":{"display":true,"text":"Sample Pie Chart without Axes"}}}});
            </script>
        </body>
        </html>
    