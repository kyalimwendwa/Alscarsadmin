<script>
  // Flag to indicate whether a request is in progress
  let isRequestInProgress = false;

  // Function to reload the mostViewedCarsContainer every 30 seconds
  function refreshMostViewedCars() {
      // Check if a request is already in progress
      if (isRequestInProgress) {
          return; // If a request is in progress, do nothing
      }

      isRequestInProgress = true; // Set the flag to indicate that a request is in progress

      const mostViewedCarsContainer = document.getElementById('mostViewedCarsContainer');
      const xhr = new XMLHttpRequest();
      xhr.onreadystatechange = function () {
          if (xhr.readyState === XMLHttpRequest.DONE) {
              if (xhr.status === 200) {
                  // Replace the content of the mostViewedCarsContainer with the updated HTML
                  const updatedContainer = document.createElement('div');
                  updatedContainer.innerHTML = xhr.responseText;
                  mostViewedCarsContainer.innerHTML = updatedContainer.querySelector('#mostViewedCarsContainer').innerHTML;
              } else {
                  console.error('Error fetching data');
              }
              isRequestInProgress = false; // Reset the flag when the request is complete
          }
      };
      xhr.open('GET', '/cars', true);
      xhr.send();
  }

  // Call the function initially when the page loads
  refreshMostViewedCars();

  // Set interval to refresh the container every 30 seconds
  setInterval(refreshMostViewedCars, 30000);
</script>
















