    <div class="column-right">
        <form action="/completeorders/<%= order.id %>" class="neworder" method="post">
            <div class="orderall" >
                <input type="hidden" name="orderId" value="<%= order.id %>">
              <div class="flex" style="display: flex; ">
               
                <div class="col" style="display: block;">
                  
                  <label for="name">Customer</label>
                  <input type="text" name="customer" placeholder="" value="<%= order.customer %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Phone number</label>
                  <input type="text" name="phone_number" placeholder="" value="<%= order.phone_number %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Email address</label>
                  <input type="text" name="email_address" placeholder="" value="<%= order.email_address %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Name of car</label>
                  <input type="text" name="car_name" placeholder="" value="<%= order.car_name %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Year of manufacture</label>
                  <input type="text" name="year_of_manufacture" placeholder="" value="<%= order.year_of_manufacture %>" readonly>
                </div>
                
                
              </div>
              
              <div class="flex" style="display: flex;">
                <div class="col" style="display: block;">
                  <label for="name">Color of car</label>
                  <input type="text" name="color" placeholder="" value="<%= order.color%>" readonly>
                </div>
       
                 <div class="col" style="display: block;">
                   <label for="name">Supplier</label>
                   <input type="text" name="supplier" placeholder="" value="<%= order.supplier %>" readonly>
                 </div>
                 
                 <div class="col" style="display: block;">
                   <label for="name">Location</label>
                   <input type="text" name="location" placeholder="" value="<%= order.location %>" readonly>
                 </div>
                 <div class="col" style="display: block;">
                  <label for="name">Destination</label>
                  <input type="text" name="destination" placeholder="" value="<%= order.destination %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Shipping method</label>
                  <input type="text" name="shipping_method" placeholder="" value="<%= order.shipping_method %>" readonly>
                </div>
           
                 
                 
               </div>
              
              <div class="flex" style="display: flex;">
                <div class="col" style="display: block;">
                  <label for="name">Shipping timeline</label>
                  <input type="text" name="shipping_timeline" placeholder="" value="<%= order.shipping_timeline %>" readonly>
                </div>
              
                <div class="col" style="display: block;">
                    <label for="category">Payment method </label>
                    <input type="text" name="payment_method" value="<%= order.payment_method %>"readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="amount">Payment Amount</label>
                  <input type="text" name="payment_amount" placeholder="" value="<%= order.payment_amount %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Period of Car Loan</label>
                  <input type="text" name="car_loan_period" placeholder="" value="<%= order.car_loan_period %>" readonly>
                </div>
                <div class="col" style="display: block;">
                  <label for="name">Date</label>
                  <input type="text" name="date" id="dateInput" value="<%= order.date %>" readonly>
                </div>
                <div class="col" style="display: block;">
                    <label for="name">Order completion date</label>
                    <input type="text" name="completion_date" id="completiondateInput"  >
                  </div>
                
        
                
              </div>
             
              
            </div>
      
            <button>Confirm Order</button>

            
        </form>
    </div>


    
      
      
    <script>
        window.onload = function() {
            // Get today's date
            var today = new Date();
            
            // Format the date as YYYY-MM-DD (assuming this format)
            var formattedDate = today.getFullYear() + '-' + (today.getMonth() + 1).toString().padStart(2, '0') + '-' + today.getDate().toString().padStart(2, '0');
            
            // Set the value of the input field to the formatted date
            document.getElementById('completiondateInput').value = formattedDate;
        };
    </script>
   

      
